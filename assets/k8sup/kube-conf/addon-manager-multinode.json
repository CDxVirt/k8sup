{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kube-addon-manager",
    "namespace": "kube-system",
    "version": "v1"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-addon-manager",
        "image": "REGISTRY/kube-addon-manager-ARCH:ADDON_MGR_VER",
        "env": [
          {
            "name": "KUBECTL_OPTS",
            "value": "--server=127.0.0.1:APISERVER_INSECURE_PORT"
          }
        ],
        "resources": {
          "requests": {
            "cpu": "5m",
            "memory": "50Mi"
          }
        },
        "volumeMounts": [
          {
            "name": "addons",
            "mountPath": "/etc/kubernetes/addons",
            "readOnly": false
          }
        ]
      },
      {
        "name": "kube-addon-manager-data",
        "image": "REGISTRY/hyperkube-ARCH:VERSION",
        "command": [
          "/copy-addons.sh",
          "multinode"
        ],
        "securityContext": {
          "privileged": true
        },
        "volumeMounts": [
          {
            "name": "copy-addons",
            "mountPath": "/copy-addons.sh"
          },
          {
            "name": "addons",
            "mountPath": "/srv/kubernetes/addons",
            "readOnly": false
          },
          {
            "name": "addons-multinode",
            "mountPath": "/etc/kubernetes/addons/multinode",
            "readOnly": false
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "copy-addons",
        "hostPath": {
          "path": "/etc/kubernetes/copy-addons.sh"
        }
      },
      {
        "name": "addons",
        "emptyDir": {}
      },
      {
        "name": "addons-multinode",
        "hostPath": {
          "path": "/etc/kubernetes/addons/multinode"
        }
      }
    ]
  }
}
